@import url(https://fonts.googleapis.com/css?family=Josefin+Slab:400,600,300italic,400italic,600italic);

@mixin flexbox() {
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
}

@mixin flexbox-direction($direction) {
  -webkit-flex-direction:$direction;
  -moz-flex-direction:$direction;
  -ms-flex-direction:$direction;
  flex-direction:$direction;
}

@mixin flexbox-justify($position) {
  -webkit-flex-justify-content:$position;
  -moz-flex-justify-content:$position;
  -ms-flex-justify-content:$position;
  justify-content:$position;
}

@mixin flexbox-align($position) {
  -webkit-align-content:$position;
  -moz-align-content:$position;
  -ms-align-content:$position;
  align-content:$position;
}

*, *:before, *:after {
  margin: 0;
  padding: 0;
  text-decoration: none;
  list-style: none;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

a {

  color: #222;
}

h1 {
  font-family: 'Josefin Slab', sans-serif;
  font-weight: 700;
  font-size: 1.8em;
}


html, body {
  height: 100%;
  margin: 0;

}

/***** SECTION / PAGES *****/
#page1 { background: #fff; }
#page2 { background-color: #ECF0F1;}

.container{
  display: table;
  height: 100%; width: 98%;
  background-color: #ECF0F1;  
}

section {
  display: table-cell;
  padding: 10px;
}

.wrapper {
  @include flexbox();
  /*background-color: green;*/
  height: 100%;
}


.tabled, .middled {
  text-align: center;
  margin: 0 auto;
}

/***** HEADER *****/

header {
  background: url('<%= asset_path("/images/body-bg.png") %>') #5CA48D;
  width: 98%;
  margin: 0 auto;
  padding: 5px;
  opacity: 0.8;
  word-spacing: -2px; 
  border-bottom: 2px solid #22313F;

  @include flexbox();
  @include flexbox-direction(column);

  font-family: 'Josefin Slab', sans-serif;
  font-weight: 700;
}

header span {
  font-size: 0.4em;
  font-weight: 400;
}
.logo-wrapper {
  width:100%;

  @include flexbox();
  @include flexbox-direction(row);
  @include flexbox-justify(space-between);
  -webkit-flex-wrap: wrap;
}
.logo {

}

.logo a {
  font-size: 1.7em;
}

.email {
  font-size: 0.8em;
}

/***** NAVIGATION *****/

#nav {
  padding-top:15px;
  @include flexbox();
  @include flexbox-direction(row);
  @include flexbox-justify(center);
  @include flexbox-justify(space-between);
}

#nav span {
  padding-left: 5px;
}

/***** MEDIA SCREEN *****/

@media screen and (max-width: 600px) {

  .logo-wrapper {
    @include flexbox-direction(column);
    text-align: center;
  }

  #nav {
    padding-top:15px;
    @include flexbox-direction(column);
    text-align: center;
  }

}

